<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">24sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SmallText.BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText.BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SquareButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="MediumSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:showText">false</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageButton.LinedButton">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SelectedImage">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="RotatedSelectedImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@null</item>
        <item name="android:rotation">-90</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:scaleY">1.3</item>
    </style>
</resources>