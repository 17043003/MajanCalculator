<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rotatedImage"
        style="@style/RotatedSelectedImage"
        app:layout_constraintBottom_toBottomOf="@+id/centerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/centerImage"
        style="@style/SelectedImage"
        android:layout_marginStart="-4dp"
        app:layout_constraintStart_toEndOf="@+id/rotatedImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/rightImage"
        style="@style/SelectedImage"
        app:layout_constraintBottom_toBottomOf="@+id/centerImage"
        app:layout_constraintStart_toEndOf="@+id/centerImage"
        app:srcCompat="@drawable/h1" />
</androidx.constraintlayout.widget.ConstraintLayout>