<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rotatedKan"
        style="@style/RotatedSelectedImage"
        app:layout_constraintBottom_toBottomOf="@+id/centerKan1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/centerKan1"
        style="@style/SelectedImage"
        android:layout_marginStart="-4dp"
        app:layout_constraintStart_toEndOf="@+id/rotatedKan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/centerKan2"
        style="@style/SelectedImage"
        app:layout_constraintBottom_toBottomOf="@+id/centerKan1"
        app:layout_constraintStart_toEndOf="@+id/centerKan1"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/rightKan"
        style="@style/SelectedImage"
        app:layout_constraintBottom_toBottomOf="@+id/centerKan2"
        app:layout_constraintStart_toEndOf="@+id/centerKan2"
        app:srcCompat="@drawable/h1" />

</androidx.constraintlayout.widget.ConstraintLayout>