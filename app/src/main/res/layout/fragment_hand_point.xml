                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p3" />

                    <ImageButton
                        android:id="@+id/pin4"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p4" />

                    <ImageButton
                        android:id="@+id/pin5"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p5" />

                    <ImageButton
                        android:id="@+id/pin6"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p6" />

                    <ImageButton
                        android:id="@+id/pin7"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p7" />

                    <ImageButton
                        android:id="@+id/pin8"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p8" />

                    <ImageButton
                        android:id="@+id/pin9"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/p9" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/selectHonorsButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/honors1"
