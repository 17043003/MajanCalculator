<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.ishzk.android.majancalculator.ui.HandPointViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCF3CD"
        tools:context=".ui.HandPointFragment">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:minHeight="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/selectManzuButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/man1"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m1" />

                    <ImageButton
                        android:id="@+id/man2"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m2" />

                    <ImageButton
                        android:id="@+id/man3"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m3" />

                    <ImageButton
                        android:id="@+id/man4"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m4" />

                    <ImageButton
                        android:id="@+id/man5"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m5" />

                    <ImageButton
                        android:id="@+id/man6"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/m6" />

                    <ImageButton
                        android:id="@+id/man7"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/m7" />

                    <ImageButton
                        android:id="@+id/man8"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/m8" />

                    <ImageButton
                        android:id="@+id/man9"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/m9" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/selectSouzuButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/sou1"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/s1" />

                    <ImageButton
                        android:id="@+id/sou2"
                        style="@style/ImageButton.LinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/s2" />

